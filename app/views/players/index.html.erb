<div class="card card-school text-white mt-3 mb-3 px-5 pt-3 pb-1 shadow-lg">
  <div class="card-head">
    <h1 class="card-title">Players</h1>
  </div>
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    
    <table class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Nivel</th>
          <th>Xp</th>
          <th>Stress</th>
          <th>Bored</th>
          <th>Ce</th>
          <th>Ch</th>
          <th>Cb</th>
          <th>Lc</th>
          <th>Score</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.nivel %></td>
            <td><%= player.xp %></td>
            <td><%= player.stress %></td>
            <td><%= player.bored %></td>
            <td><%= player.ce %></td>
            <td><%= player.ch %></td>
            <td><%= player.cb %></td>
            <td><%= player.lc %></td>
            <td><%= player.score %></td>
            <td><%= player.user.nome %></td>
            <td><%= link_to player do %><i class="fas fa-info text-white icon-circle"></i><% end %></td>
            <td><%= link_to edit_player_path(player) do %><i class="fas fa-pen text-white icon-circle"></i><% end %></td>
            <td><%= link_to player, method: :delete, data: { confirm: 'VocÃª tem certeza?' } do %><i class="fas fa-times text-white icon-circle"></i><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Cadastrar player', new_player_path, class: "text-white" %>
</div>
