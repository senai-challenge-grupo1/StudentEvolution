<section class="pt-5">
  <div class="card card-school p-3 pt-5 mt-5 offset-2 col-8 text-center text-light">
    <div class="card-head">
      <h1 class="card-title">Student Evolution</h1>
    </div>

    <div class="card-body">
      <% if current_user %>
        <p class="mb-4 h3">
          <%= link_to "Jogar", game_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
        </p>

        <% if current_user.admin %>
          <p class="mb-2 h5">
            <%= link_to "Administrar", rails_admin_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
          </p>

          <p class="mb-2 h5">
            <%= link_to "Cadastro de perguntas", perguntas_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
          </p>
        <% else %>
          <p class="mb-2 h5">
            <%= link_to "Perfil", edit_user_registration_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
          </p>

          <p class="mb-2 h5">
            <%= link_to "Sugerir pergunta", new_pergunta_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
          </p>
        <% end %>
      <% else %>
        <p class="mb-3 h4">
          <%= link_to "Entrar", new_user_session_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
        </p>

        <p class="mb-3 h4">
          <%= link_to "Registrar-se", new_user_registration_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
        </p>
      <% end %>

      <p class="mb-2 h5">
        <%= link_to "Ranking", ranking_path, class: "text-light shadow-0 hvr-wobble-horizontal" %>
      </p>

      <% if current_user %><p class="h5">
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "text-light shadow-0 hvr-wobble-horizontal" %>
        </p>
      <% end %>
    </div>
  </div>
</section>
