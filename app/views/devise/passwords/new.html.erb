<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<div class="card card-school text-white col-12 col-sm-6 offset-sm-3 p-2 mt-5">
    <div class="card-head mt-2">
      <h1 class="text-center">Esqueceu sua senha?</h1>
    </div>

    <div class="card-body">
      <p class="text-center">Insira seu e-mail e enviaremos uma mensagem de redefinição de senha!</p>
		  <div class="field mt-1 row">
        <%= f.label :email, "E-mail:", class: "col-3 col-form-label text-right" %>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ex.: e@mail.com" %>
        </div>
      </div>

		  <div class="actions mt-1 text-center">
        <%= f.submit "Enviar", class: "btn btn-dark hvr-wobble-horizontal" %>
      </div>

		  <div class="shared row">
        <div class="col-6">
          <%= link_to "Entrar", new_user_session_path() %><br />
        </div>
        <div class="col-6 text-right">
          <%= link_to "Não é cadastrado?", new_registration_path(resource_name) %><br />
        </div>
      </div>
    </div>
  </div>
<% end %>
