<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card card-school text-white col-12 col-sm-6 offset-sm-3 p-2">
    <div class="card-head mt-2">
      <h1 class="text-center">Acesse sua conta</h1>
    </div>

    <div class="card-body">
      <div class="form-inputs">
        <%= f.input :login, label: "Login:", autofocus: true, autocomplete: false %>
        <%= f.input :password, label: "Senha:", autocomplete: "off" %>
      </div>

      <div class="actions mt-1 text-center">
        <%= f.submit "Entrar", class: "btn btn-dark hvr-wobble-horizontal" %>
      </div>

      <div class="shared row">
        <%= link_to "Não é cadastrado?", new_registration_path(resource_name) %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "ml-auto" %>
      </div>
    </div>
  </div>
<% end %>
