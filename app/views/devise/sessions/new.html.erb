<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card col-12 col-sm-6 offset-sm-3 bg-dark text-white p-2 mt-5">
    <div class="card-header">
      <h3 class="card-title text-center">Login</h3>
    </div>

    <div class="card-body">
      <div class="field mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="field mt-1">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
      </div>

      <div class="actions mt-1">
        <%= f.submit "Entrar", class: "btn btn-success" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
