<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="card card-school text-white col-12 col-sm-10 offset-sm-1 p-2 pt-5">
    <div class="card-head">
      <h3 class="text-center">Editar perfil de <%= resource.nome.to_s.humanize %></h3>
    </div>

    <div class="card-body">
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nome, label: "Nome:", label_html: { class: "mt-2 mb-0" }, input_html: { class: "form-control" }, autofocus: true %>
        <%= f.input :login, label: "Login:", label_html: { class: "mt-2 mb-0" }, input_html: { class: "form-control mt-0" } %>
        <%= f.input :email, label: "E-mail:", label_html: { class: "mt-2 mb-0" }, input_html: { class: "form-control" } %>
        <%= f.input :data_nascimento, label: "Data de nascimento:", label_html: { class: "mt-2 mb-0" }, input_html: { class: "form-control" }, order: [:day, :month, :year] %>
        <%= f.input :current_password, label: "Senha atual:", hint: "Precisamos de sua senha atual para confirmar as alterações", label_html: { class: "mt-2 mb-0" }, input_html: { class: "form-control" } %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit, "Atualizar", class: "btn btn-dark hvr-wobble-horizontal" %>
      </div>
    </div>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p><%= button_to "Deletar conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
