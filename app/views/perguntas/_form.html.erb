<%= simple_form_for(@pergunta) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :area, as: :select, collection: [['ce', 'Ciências Exatas'], ['ch', 'Ciências Humanas'], ['cb', 'Ciências Biológicas'], ['lc', 'Linguagens e Códigos']], value_method: :first, label_method: :second, label: "Área:", div_html: { class: "col-4" }, required: true %>
    <%= f.input :nivel, label: "Nível:", div_html: { class: "col-4" }, input_html: { min: 1, max: 10 }, required: true %>
    <%= f.input :texto, label: "Texto:", required: true %>
    <%= f.input :resposta1, label: "Resposta 1:", input_html: { maxlength: 255 }, required: true %>
    <%= f.input :resposta2, label: "Resposta 2:", input_html: { maxlength: 255 }, required: true %>
    <%= f.input :resposta3, label: "Resposta 3:", input_html: { maxlength: 255 }, required: true %>
    <%= f.input :resposta4, label: "Resposta 4:", input_html: { maxlength: 255 }, required: true %>
    <%= f.input :resposta_correta, as: :select, collection: [[1, 1], [2, 2], [3, 3], [4, 4]], label: "Resposta correta:", required: true %>
    <% if current_user.admin %>
      <%= f.input :aprovada, label: "Aprovada:" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
